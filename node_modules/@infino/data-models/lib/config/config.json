{
    "postgres": {
        "username": { "$env": "DATA_POSTGRES_USER", "$default": "root" },
        "password": { "$env": "DATA_POSTGRES_PASSWORD", "$default": "password" },
        "database": { "$env": "DATA_POSTGRES_DB", "$default": "data_model_dev" },
        "host": { "$env": "DATA_POSTGRES_HOST", "$default": "127.0.0.1" },
        "logging": { "$env": "DATA_POSTGRES_ENABLE_LOGGING", "$default": false }
    },
    "mongo": {
        "host": {
            "$env": "DATA_MONGODB_HOST",
            "$default": "127.0.0.1"
        },
        "port": {
            "$env": "DATA_MONGODB_PORT",
            "$default": "27017"
        },
        "user": { "$env": "DATA_MONGODB_USERNAME", "$default": "root" },
        "pass": { "$env": "DATA_MONGODB_PASSWORD", "$default": "password" },
        "useNewUrlParser": true,
        "useUnifiedTopology": true,
        "useCreateIndex": true,
        "useFindAndModify": false,
        "dbName": { "$env": "DATA_MONGODB_DB", "$default": "data_model_dev" },
        "authSource": { "$env": "DATA_AUTH_DB", "$default": "admin" }
    }
}
